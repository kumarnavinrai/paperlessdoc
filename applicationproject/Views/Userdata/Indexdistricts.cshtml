@model IEnumerable<applicationproject.Models.Districts>

@{
    ViewBag.Title = "Select District";
}

<h2>Select District</h2>
<p>Language : @ViewBag.languagename</p>
<p>Country : @ViewBag.countryname</p>
<p>State : @ViewBag.statename</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.config)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updated)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.config)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.updated)
        </td>
       
        <td>
            @Html.ActionLink("Select Department", "Indexdepartment", new { id = item.districtId, countryname = ViewBag.countryName, statename = ViewBag.stateName, districtname = item.name, languagename = ViewBag.languagename, languageid = ViewBag.languageId, countryid = ViewBag.countryId, stateid = ViewBag.stateid }) 
           
        </td>
    </tr>
}

</table>
